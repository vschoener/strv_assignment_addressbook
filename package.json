{
  "name": "addressbook",
  "version": "1.0.0",
  "description": "Address Book Service to expose a REST API",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build:ts",
    "build:ts": "tsc",
    "watch": "concurrently -k -p '[{name}]' -n 'TS,Node' -c 'green.bold,blue.bold' 'npm run watch:ts' 'npm run watch:serve'",
    "watch:serve": "nodemon --watch dist dist/main.js",
    "watch:ts": "tsc -w",
    "serve": "node dist/main.js",
    "test": "NODE_ENV=test jest --forceExit",
    "tslint": "tslint -c tslint.json -p tsconfig.json"
  },
  "author": "Vincent Schoener",
  "license": "ISC",
  "devDependencies": {
    "@types/bcrypt-nodejs": "0.0.30",
    "@types/bluebird": "^3.5.20",
    "@types/body-parser": "^1.16.8",
    "@types/chai": "^4.1.2",
    "@types/cors": "^2.8.3",
    "@types/dotenv": "^4.0.2",
    "@types/errorhandler": "0.0.32",
    "@types/express": "^4.11.1",
    "@types/jest": "^22.2.2",
    "@types/jsonwebtoken": "^7.2.6",
    "@types/jwt-decode": "^2.2.1",
    "@types/lodash": "^4.14.106",
    "@types/mongoose": "^5.0.7",
    "@types/morgan": "^1.7.35",
    "@types/node": "^9.6.0",
    "@types/sinon": "^4.3.0",
    "@types/supertest": "^2.0.4",
    "@types/validator": "^9.4.0",
    "@types/winston": "^2.3.8",
    "chai": "^4.1.2",
    "concurrently": "^3.5.1",
    "firebase-mock": "^2.1.8",
    "jest": "^22.4.3",
    "mongodb-memory-server": "^1.7.0",
    "nodemon": "^1.17.2",
    "sinon": "^4.4.9",
    "supertest": "^3.0.0",
    "ts-jest": "^22.4.2",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "typescript": "^2.7.2"
  },
  "dependencies": {
    "bcrypt-nodejs": "0.0.3",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.2",
    "cors": "^2.8.4",
    "dotenv": "^5.0.1",
    "errorhandler": "^1.5.0",
    "express": "^4.16.3",
    "firebase": "^4.12.0",
    "firebase-functions": "^0.9.1",
    "firebase-admin": "^5.11.0",
    "jsonwebtoken": "^8.2.0",
    "lodash": "^4.17.5",
    "mongoose": "^5.0.11",
    "morgan": "^1.9.0",
    "winston": "^2.4.1",
    "validator": "^9.4.1"
  },
  "jest": {
    "verbose": true,
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/lib/",
      "/dist/"
    ],
    "testRegex": "(/tests/index.ts)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  }
}
