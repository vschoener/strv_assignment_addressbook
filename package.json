{
  "name": "addressbook",
  "version": "1.0.0",
  "description": "Address Book Service to expose a REST API",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build:ts",
    "build:ts": "tsc",
    "watch": "concurrently -k -p '[{name}]' -n 'TS,Node' -c 'green.bold,blue.bold' 'npm run watch:ts' 'npm run watch:serve'",
    "watch:serve": "nodemon dist/server.js",
    "watch:ts": "tsc -w",
    "serve": "node dist/main.js",
    "test": "jest --forceExit --coverage --verbose",
    "tslint": "tslint -c tslint.json -p tsconfig.json"
  },
  "author": "Vincent Schoener",
  "license": "ISC",
  "devDependencies": {
    "@types/body-parser": "^1.16.8",
    "@types/chai": "^4.1.2",
    "@types/cors": "^2.8.3",
    "@types/dotenv": "^4.0.2",
    "@types/errorhandler": "0.0.32",
    "@types/express": "^4.11.1",
    "@types/jest": "^22.1.2",
    "@types/morgan": "^1.7.35",
    "@types/node": "^9.4.5",
    "@types/supertest": "^2.0.4",
    "chai": "^4.1.2",
    "concurrently": "^3.5.1",
    "jest": "^22.3.0",
    "nodemon": "^1.14.12",
    "supertest": "^3.0.0",
    "ts-jest": "^22.0.4",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "typescript": "^2.7.1"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "cors": "^2.8.4",
    "dotenv": "^5.0.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.2",
    "morgan": "^1.9.0"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "mapCoverage": true,
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/lib/"
    ],
    "testRegex": "(/test/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  }
}
