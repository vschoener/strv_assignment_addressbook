{
  "name": "addressbook",
  "version": "1.0.0",
  "description": "Address Book Service to expose a REST API",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build:ts",
    "build:ts": "tsc",
    "watch": "concurrently -k -p '[{name}]' -n 'TS,Node' -c 'green.bold,blue.bold' 'npm run watch:ts' 'npm run watch:serve'",
    "watch:serve": "nodemon dist/server.js",
    "watch:ts": "tsc -w",
    "serve": "node dist/server.js",
    "test": "echo \"Error: no test specified\" && exit 0",
    "tslint": "tslint -c tslint.json -p tsconfig.json"
  },
  "author": "Vincent Schoener",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^9.4.5",
    "concurrently": "^3.5.1",
    "nodemon": "^1.14.12",
    "tslint": "^5.9.1",
    "typescript": "^2.7.1"
  }
}
